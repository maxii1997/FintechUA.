<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtPresupuestoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint_budget"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtPresupuesto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPresupuestoLabel"
        android:textSize="24sp"
        tools:text="0.00" />

    <TextView
        android:id="@+id/txtNumeroPagosLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPresupuesto"
        android:layout_marginTop="16dp"
        android:text="@string/pagos"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtNumeroPagos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNumeroPagosLabel"
        android:textSize="24sp"
        tools:text="0" />

    <TextView
        android:id="@+id/txtCategoriaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNumeroPagos"
        android:layout_marginTop="16dp"
        android:text="@string/category"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCategoriaLabel"
        android:textSize="24sp"
        tools:text="CategorÃ­a de ejemplo" />

</RelativeLayout>
