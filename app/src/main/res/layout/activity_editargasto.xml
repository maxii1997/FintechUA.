<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Editargasto">

    <EditText
        android:id="@+id/editTextPresupuesto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Presupuesto"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinnerCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CategorÃ­a"
        app:layout_constraintTop_toBottomOf="@+id/editTextPresupuesto"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />
    <EditText
        android:id="@+id/editTextGasto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gasto"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCategoria"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/guardarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_save"
        app:layout_constraintTop_toBottomOf="@+id/editTextGasto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
